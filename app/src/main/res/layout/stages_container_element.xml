<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AppTheme.NoActionBar">

    <TextView
        android:layout_width="50dp"
        android:layout_height="44dp"
        android:id="@+id/number_of_stage"
        app:layout_constraintRight_toLeftOf="@+id/stages_container_time_edittext"
        android:textSize="32sp"
        app:layout_constraintTop_toTopOf="@+id/stages_container_time_edittext"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:layout_height="44dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/stages_container_time_edittext"
        android:layout_width="108dp"
        app:layout_constraintRight_toLeftOf="@+id/stages_container_temperature_edittext"
        android:layout_marginEnd="32dp"
        tools:layout_editor_absoluteY="20dp" />

    <EditText
        android:layout_height="44dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/stages_container_temperature_edittext"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_width="133dp"
        app:layout_constraintTop_toTopOf="@+id/stages_container_time_edittext" />

</android.support.constraint.ConstraintLayout>